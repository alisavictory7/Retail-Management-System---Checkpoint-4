# ────────────────
# Flask / App Core
# ────────────────
APP_NAME=Retail Management System
APP_ENV=development
SECRET_KEY=replace-me-with-a-long-random-string
FLASK_DEBUG=true
FLASK_TESTING=false
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000

# ────────────────
# Database (choose one)
# ────────────────
# Option A: single DATABASE_URL string (recommended for Docker/Prod)
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/retail_db

# Option B: component values (will be composed automatically)
DB_DRIVER=postgresql+psycopg2
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=retail_db
SQL_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ────────────────
# Returns & Refunds Policy
# ────────────────
FEATURE_RETURNS_ENABLED=true
RETURN_WINDOW_DAYS=30
MAX_RETURN_ITEM_QUANTITY=5
RETURNS_REQUIRE_PHOTOS=false

# ────────────────
# Observability
# ────────────────
OBSERVABILITY_ENABLED=true
STRUCTURED_LOGS_ENABLED=true
LOG_LEVEL=INFO
REQUEST_ID_HEADER=X-Request-ID
METRICS_EXPORT_INTERVAL=60
DASHBOARD_SAMPLE_WINDOW_MIN=15

# ────────────────
# Reliability / Scenario toggles
# ────────────────
PAYMENT_REFUND_FAILURE_PROBABILITY=0.1

# ────────────────
# Quality scenario tags
# ────────────────
QUALITY_SCENARIO_TAGS=availability,performance


